{
  "name": "blindspot-transcribe",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm run dev:api\" \"sleep 3 && npm run dev:frontend\"",
    "dev:frontend": "vite --open",
    "dev:api": "tsx simple-api-server.ts",
    "build": "npm run build:clean && npm run build:client",
    "build:clean": "rm -rf dist",
    "build:client": "NODE_ENV=production vite build",
    "build:check": "tsc --noEmit --skipLibCheck",
    "build:analyze": "npm run build:client && npx vite-bundle-analyzer dist/stats.html",
    "start:prod": "npm run build && npm run preview:prod",
    "preview": "vite preview",
    "preview:prod": "NODE_ENV=production vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "benchmark": "node scripts/benchmark.js",
    "deploy": "./scripts/deploy.sh",
    "deploy:docker": "docker-compose up -d",
    "deploy:docker:dev": "docker-compose --profile dev up -d",
    "validate": "npm run lint && npm run test && npm run build:check",
    "precommit": "npm run validate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bradnemer/blindspot-transcribe.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/bradnemer/blindspot-transcribe/issues"
  },
  "homepage": "https://github.com/bradnemer/blindspot-transcribe#readme",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vite": "^7.0.6"
  },
  "dependencies": {
    "@types/multer": "^2.0.0",
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "multer": "^2.0.2",
    "papaparse": "^5.5.3"
  }
}
